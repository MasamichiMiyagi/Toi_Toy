<table class='table'>
  <thead>
    <tr>
      <th>Comment</th>
      <th></th>
      <th class="post-comments-counter">
        <%= render "public/post_comments/counter", game: @game %>
      </th>
    </tr>
  </thead>
  <tbody>
      <% game.post_comments.each do |post_comment| %>
      <tr>
        <td>
          <%= link_to customer_path(post_comment.customer) do %>
            <%= image_tag post_comment.customer.get_profile_image(50,50) %><br>
            <%= post_comment.customer.name %>
          <% end %>
        </td>
        <td><%= post_comment.comment %></td>
        <td>
          <% if post_comment.customer == current_customer %>
            <%= link_to "Destroy", game_post_comment_path(game, post_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger pull-right" %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>