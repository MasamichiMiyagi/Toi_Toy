<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>Customer info</h2>
      <%= render 'info', customer: @customer %>
      <h2 class="mt-3">New tweet</h2>
      <%= render 'public/games/form', game: @game %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2><%= current_customer.name %> Tweets</h2>
      <%= render 'public/games/index',games: @games %>
    </div>
  </div>
</div>