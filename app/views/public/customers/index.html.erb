<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2 class="mt-3">Customer info</h2>
      <%= render 'info', customer: current_customer %>
      <h2 class="mt-3">New tweet</h2>
      <%= render 'public/games/form', game: @game %>
    </div>
    <div class='col-md-8 offset-md-1 mt-3'>
      <div class="form-row">
        <div class="form-group">
          <%= search_form_for @q, url: search_games_path do |f| %>
            <%= f.search_field :title_cont, placeholder: 'ユーザー名' %>
            <%= f.submit '検索', class: 'btn btn-info btn-sm mb-1' %>
          <% end %>
        </div>
        <h2 class="mt-3">Customers</h2>
        <%= render 'index',customers: @customers %>
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>