<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="mt-3">Editing Tweet</h1>
      <%= render 'layouts/errors', obj: @game %>
      <%= render 'form', game: @game %>
      <button type="button" class="btn btn-secondary btn-sm mt-2">
        <%= link_to 'back', @game, class: "text-light game_#{@game.id}" %>
      </button>
      <button type="button" class="btn btn-info btn-sm mt-2">
        <%= link_to 'Tweets', games_path, class: "back text-light" %>
      </button>
    </div>
  </div>
</div>