<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @game %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>Customer info</h2>
      <%= render 'customers/info', customer: current_customer %>
      <h2 class="mt-3">New game</h2>
      <%= render 'form', game: @game %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h1>検索</h1>
        <%= search_form_for @q, url: search_users_path do |f| %>
          <%= f.search_field :title_cont, placeholder: '記事のタイトル' %>
          <%= f.submit '検索' %>
        <% end %>
      <h2>Games</h2>
      <%= render 'index', games: @games %>
    </div>
  </div>
</div>