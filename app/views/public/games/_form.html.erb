<%= form_with model:game,local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control game_title' %>
  </div>
  <div class="form-group row" id="star">
    <%= f.label :star, class: 'col-md-3 col-form-label' %>
    <div review-star></div>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :game_image, class: "form-control-file game_image", accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.label :player %>
    <%= f.select :player, ['1~2人', '3~6人', '7人~'], { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
  </div>
  <div class="form-group">
    <%= f.label :play_time %>
    <%= f.select :play_time, ['~20分', '20~40分', '40分~'], { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control game_body', rows: 8 %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create', class: 'btn btn-success' %>
  </div>
<% end %>

