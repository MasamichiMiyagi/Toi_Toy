<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% games.each do |game| %>
      <tr>
        <td><%= link_to(game.customer) do %>
          <%= image_tag game.customer.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td><%= link_to game.title,game, class: "game_#{game.id}" %></td>
        <td><%= game.body %></td>
        <td class="game-star" data-score="<%= game.star %>"></td>
        <td><%= render "public/post_comments/counter", game: game %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
  $('.game-star').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>