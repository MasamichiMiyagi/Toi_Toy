<div class="container">
  <div class="row py-2">
    <div class="col">
      <h4>Sign up</h4>
    </div>
  </div>
  <div class="row">
    <div class="col">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group col">
        <%= f.label :Name %><br />
        <%= f.text_field :name, class: 'form-control ml-3' %>
      </div>

      <div class="form-group col">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control ml-3' %>
      </div>

      <div class="form-group col">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control ml-3' %>
      </div>

      <div class="form-group col">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control ml-3' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up",class: "btn btn-success mt-4 mb-3" %>
      </div>
    <% end %>

      <h6 class="font-weight-bold">既に登録済みの方はこちらからログイン</h6>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>