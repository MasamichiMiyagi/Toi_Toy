<div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-11 col-lg-8 px-5 px-sm-0 mx-auto my-3" >
    <h3 class="mb-3">投稿一覧</h3>
     <table class='table table-hover'>
       <thead>
        <tr class="table-active">
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td>
              <%= link_to(game.customer) do %>
                <%= image_tag game.customer.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td><%= game.title %></td>
            <td><%= game.body %></td>
            <% if admin_signed_in? %>
              <td><%= link_to "削除", game_path(game.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>
   <div class="col-5 offset-4"><%= paginate @games %></div>
  </div>
</div>